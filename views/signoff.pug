// sign off table
#container-two.container
  #signoff
    #signoff-button
      button.btn.btn-success.button(type='button' data-bs-toggle='modal' data-bs-target='#exampleModal3' data-bs-whatever='@fat')
        | - Add Student
      #exampleModal3.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog
          #all.modal-content
            .modal-header
              h5#exampleModalLabel.modal-title
                | STUDENT ATTENDENCE FORM
              button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
            .modal-body
              form#regform.row.g-3(name='register' method='POST' action='/signoff')
                .col-md-6
                  label.form-label(for='inputName4') Name
                  input#inputName4.form-control(type='text' placeholder='Name' size='' name='name')
                  span#userError
                .col-md-6
                  label.form-label(for='inputGrade') Grade
                  input#inputGrade.form-control(type='text' placeholder='grade' size='' name='grade')
                  span#gradeError
                .col-md-6
                  label.form-label(for='inputEmail') Email
                  input#inputemail.form-control(type='text' placeholder='email' size='' name='email')
                  span#emaillError
                .modal-footer
                  button.btn.btn-outline-secondary(type='button' data-bs-dismiss='modal')
                    | Close
                  button.btn.btn-outline-success(type='submit')
                    | Sign Off
  .table-responsive.table-responsive-data2
    table.table.table-data2
      thead
        tr
          th Name
          th Grade
          th Email
      tbody
        if signoffs.length 
        each signoff in signoffs 
         tr.tr-shadow
            td #{signoff.name}
            td #{signoff.grade}
            td #{signoff.email}
